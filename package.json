{
  "name": "dawayer",
  "productName": "Dawayer",
  "version": "0.1.0",
  "description": "",
  "main": "build/main/main.js",
  "private": true,
  "scripts": {
    "run": "electron ./build/main/main.js --debug",
    "svgo": "svgo --config='{ \"plugins\": [ { \"removeAttrs\": { \"attrs\": \"(fill|stroke)\" } } ] }' ./assets",
    "sprite": "npx create-svg-sprite --input ./assets --output ./build",
    "start": "(trap 'kill 0' SIGINT; npm run sprite & npx babel-cli src --out-dir build --copy-files --source-maps --watch & npx pug src --out build --pretty --watch)",
    "build": "npm run svgo && npm run sprite && npx babel-cli src --out-dir build --copy-files --no-comments --minified && npx pug src --out build && rm build/*.pug"
  },
  "build": {
    "appId": "com.herpproject.dawayer",
    "afterPack": "afterPack.js",
    "asar": false,
    "files": [
      "build.json",
      "LICENSE",
      "README.md",
      "CHANGELOG.md",
      "missing.png",
      "tray-black.png",
      "tray-dark.png",
      "tray-light.png"
    ],
    "directories": {
      "output": "./public"
    },
    "fileAssociations": [
      {
        "ext": "mp3",
        "mimeType": "audio/mpeg3"
      },
      {
        "ext": "mpeg",
        "mimeType": "audio/mpeg"
      },
      {
        "ext": "opus",
        "mimeType": "audio/opus"
      },
      {
        "ext": "ogg",
        "mimeType": "application/ogg"
      },
      {
        "ext": "wav",
        "mimeType": "audio/wav"
      },
      {
        "ext": "aac",
        "mimeType": "audio/aac"
      },
      {
        "ext": "flac",
        "mimeType": "audio/flac"
      }
    ],
    "linux": {
      "artifactName": "Dawayer.${ext}",
      "executableName": "Dawayer",
      "category": "Audio;AudioVideo"
    },
    "nsis": {
      "artifactName": "Dawayer-Setup.exe",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Dawayer",
      "shortcutName": "Dawayer"
    },
    "electronDownload": {
      "cache": ".electron-cache"
    }
  },
  "homepage": "https://gitlab.com/hpj/Dawayer#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/hpj/Dawayer.git"
  },
  "bugs": {
    "url": "https://gitlab.com/hpj/Dawayer/issues"
  },
  "author": "Herp Project <herpproject0@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "electron-prompt": "^1.3.1",
    "fs-extra": "^8.1.0",
    "howler": "^2.1.2",
    "javascript-time-ago": "^2.0.1",
    "lodash": "^4.17.14",
    "md5": "^2.2.1",
    "mpris-service": "^2.1.0",
    "music-metadata": "^4.2.1",
    "request": "^2.88.0",
    "rss-parser": "^3.7.2",
    "tippy.js": "^4.3.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "babel-eslint": "^10.0.2",
    "create-svg-sprite": "^1.0.4",
    "electron": "^4.2.6",
    "electron-builder": "^21.0.15",
    "eslint": "^6.0.1",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.6.0",
    "pug-lint-config-clock": "^2.0.0"
  }
}
