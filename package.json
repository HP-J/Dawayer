{
  "name": "dawayer",
  "productName": "Dawayer",
  "version": "0.1.0",
  "description": "An ordinary music player",
  "main": "compiled/main/main.js",
  "private": true,
  "scripts": {
    "dev": "npx babel src --out-dir compiled --copy-files --source-maps --watch & npx pug src --out compiled --pretty --watch &",
    "compile": "npx babel src --out-dir compiled --copy-files --no-comments --minified && npx pug src --out compiled && rm compiled/*.pug",
    "clean": "rm -rf compiled",
    "patch": "npm version patch --no-git-tag-version"
  },
  "build": {
    "appId": "com.herpproject.dawayer",
    "afterPack": "afterPack.js",
    "asar": false,
    "files": [
      "index.js",
      "build.json",
      "LICENSE",
      "README.md",
      "CHANGELOG.md",
      "tray.png"
    ],
    "directories": {
      "output": "./public"
    },
    "linux": {
      "artifactName": "Dawayer.${ext}",
      "executableName": "Dawayer",
      "category": "Audio"
    },
    "nsis": {
      "artifactName": "Dawayer-Setup.exe",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Dawayer",
      "shortcutName": "Dawayer"
    }
  },
  "homepage": "https://gitlab.com/herpproject/Dawayer",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/herpproject/Dawayer.git"
  },
  "author": "Herp Project <herpproject0@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "electron-json-config": "^1.5.3",
    "fs-extra": "^7.0.0",
    "howler": "^2.0.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-eslint": "^10.0.1",
    "electron": "^3.0.5",
    "electron-builder": "^20.28.4",
    "eslint": "^5.7.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6"
  }
}
