{
  "name": "dawayer",
  "productName": "Dawayer",
  "version": "0.1.0",
  "description": "An ordinary audio player",
  "main": "compiled/main/main.js",
  "private": true,
  "scripts": {
    "sprite": "create-svg-sprite --input ./icons --output ./compiled",
    "dev": "npm run sprite & npx babel src --out-dir compiled --copy-files --source-maps --watch & npx pug src --out compiled --pretty --watch &",
    "compile": "npm run sprite && npx babel src --out-dir compiled --copy-files --no-comments --minified && npx pug src --out compiled && rm compiled/*.pug",
    "clean": "rm -rf compiled",
    "patch": "npm version patch --no-git-tag-version"
  },
  "build": {
    "appId": "com.herpproject.dawayer",
    "afterPack": "afterPack.js",
    "asar": false,
    "files": [
      "index.js",
      "build.json",
      "LICENSE",
      "README.md",
      "CHANGELOG.md",
      "tray.png"
    ],
    "directories": {
      "output": "./public"
    },
    "fileAssociations": [
      {
        "ext": "mp3",
        "mimeType": "audio/mpeg3"
      },
      {
        "ext": "mp4",
        "mimeType": "audio/mp4"
      },
      {
        "ext": "mpeg",
        "mimeType": "audio/mpeg"
      },
      {
        "ext": "opus",
        "mimeType": "audio/opus"
      },
      {
        "ext": "ogg",
        "mimeType": "audio/ogg"
      },
      {
        "ext": "wav",
        "mimeType": "audio/wav"
      },
      {
        "ext": "aac",
        "mimeType": "audio/aac"
      },
      {
        "ext": "m4a",
        "mimeType": "audio/m4a"
      },
      {
        "ext": "flac",
        "mimeType": "audio/flac"
      }
    ],
    "linux": {
      "artifactName": "Dawayer.${ext}",
      "executableName": "Dawayer",
      "category": "Audio"
    },
    "nsis": {
      "artifactName": "Dawayer-Setup.exe",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Dawayer",
      "shortcutName": "Dawayer"
    }
  },
  "homepage": "https://gitlab.com/herpproject/Dawayer",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/herpproject/Dawayer.git"
  },
  "author": "Herp Project <herpproject0@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "electron-json-config": "^1.5.3",
    "fs-extra": "^7.0.0",
    "howler": "^2.0.15",
    "textfit": "^2.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-eslint": "^10.0.1",
    "create-svg-sprite": "^1.0.4",
    "electron": "^3.0.6",
    "electron-builder": "^20.29.0",
    "eslint": "^5.8.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6"
  }
}
